{
  "name": "cmmi-specs-mcp",
  "version": "0.1.7",
  "description": "基于MCP协议的CMMI规范智能代理系统，实现VS Code Copilot Chat集成与多语言文档生成",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "cmmi-specs-mcp": "dist/cli.js",
    "cmmi-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:cli",
    "build:server": "npx tsc -p tsconfig.json",
    "build:cli": "mkdir -p dist && cp cli.js dist/ && chmod +x dist/cli.js && cp -r agents dist/ 2>/dev/null || true",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "node --loader ts-node/esm tests/*.test.ts",
    "test:jest": "jest --testPathPattern=tests/",
    "install-dev": "./install-mcp.sh",
    "install-vscode": "./install-vscode.sh",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "cmmi",
    "agent",
    "copilot",
    "ai",
    "documentation",
    "workflow",
    "multi-agent",
    "typescript",
    "vscode"
  ],
  "author": "Jieky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pjy998/cmmi-specs-agent.git"
  },
  "homepage": "https://github.com/pjy998/cmmi-specs-agent#readme",
  "bugs": {
    "url": "https://github.com/pjy998/cmmi-specs-agent/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.104.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/",
    "agents/",
    "configs/",
    "docs/",
    "install-mcp.sh",
    "install-vscode.sh",
    "README.md",
    "LICENSE"
  ]
}
